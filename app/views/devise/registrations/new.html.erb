<div class="background w-100">
  <div class="background__wrapper py-5">


    <div class="user-form text-center px-5 pb-5 w-25 mx-auto">
      <h2 class="mb-3 pt-5">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signup' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field w-100 mx-auto mb-3">
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: 'Nickname', class: 'form-control' %>
        </div>

        <div class="field w-100 mx-auto mb-3">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control', id: 'inputEmail' %>
        </div>

        <div class="field w-100 mx-auto mb-3">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (6 characters minimum)', class: 'form-control', id: 'inputPassword' %>
        </div>

        <div class="field w-100 mx-auto mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control', id: 'inputPassword' %>
        </div>

        <div class="actions my-3">
          <%= f.button "Sign up", type: 'submit', class: 'btn btn-lg btn-primary btn-bloc w-100' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
